      <directory>${project.basedir}/nachweis_templates</directory>
      <outputDirectory>/${project.artifactId}/nachweis_templates/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/normdaten_templates</directory>
      <outputDirectory>/${project.artifactId}/normdaten_templates/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/Schemata</directory>
      <outputDirectory>/${project.artifactId}/Schemata/</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
