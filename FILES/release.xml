    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/${project.artifactId}</directory>
      <outputDirectory>/${project.artifactId}/</outputDirectory>
      <excludes>
        <exclude>nachweis_daten/3_0_Production/1_Neue_KODs</exclude>
        <exclude>nachweis_daten/3_0_Production/*/01_*.xml</exclude>
